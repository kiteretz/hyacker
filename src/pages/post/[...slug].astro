---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((entry: any) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props as {
  entry: { data: any; render: () => Promise<{ Content: any }> };
};
const { Content } = await entry.render();
const { title, description, pubDate, author, image, tags } = entry.data;
---

<Layout title={title} className="post">
  <article>
    <h2>{title}</h2>
    <p>{description}</p>
    <p>{pubDate.toISOString().slice(0, 10)}</p>
    <p>{author}</p>
    {image && <img src={image?.url} alt={image?.alt} />}
    <ul>
      {(tags ?? []).map((tag: string) => <li>{tag}</li>)}
    </ul>
    <div class="content-wrapper">
      <Content />
    </div>
  </article>
</Layout>
